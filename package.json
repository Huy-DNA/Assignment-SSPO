  "description": "An SE assignment",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "test": "",
    "build:backend": "copyfiles backend/**/* .dist && copyfiles ./index.ejs .dist",
    "build:frontend": "webpack",
    "build": "npx yarn build:backend && npx yarn build:frontend",
    "start": "node ./.dist/backend/bin/www.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "watch:backend": "watch \"copyfiles backend/**/* .dist && copyfiles ./index.ejs .dist\" ./backend",
    "watch:frontend": "webpack --watch",
    "watch": "concurrently \"npx yarn watch:backend\" \"npx yarn watch:frontend\""
  },
